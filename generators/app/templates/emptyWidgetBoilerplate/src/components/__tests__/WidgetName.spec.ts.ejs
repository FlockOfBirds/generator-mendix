import { shallow } from "enzyme";
import { createElement } from "react";

import WidgetName, { WidgetNameProps } from "../WidgetName";

describe("WidgetName", () => {
    const createWidgetName = (props: WidgetNameProps) => shallow(createElement(WidgetName, props));
    const packageNameProps: WidgetNameProps = {
        sampleText: "World"
    };

    it("should render the structure correctly", () => {
        const packageName = createWidgetName(packageNameProps);

        expect(packageName).toBeElement(
            createElement("div", {}, `Hello ${packageNameProps.sampleText}`)
        );
    });
});
